datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Confession {
  id Int @id @default(autoincrement())   
  title String
  content String
  color String
  withWebsteLink Boolean
  websiteName String?
  websiteLink String?
}